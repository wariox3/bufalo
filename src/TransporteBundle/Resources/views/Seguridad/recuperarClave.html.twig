<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Ardid V1 | Recuperar clave</title>
        <!-- Tell the browser to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <!-- Bootstrap 3.3.6 -->
        <link rel="stylesheet" href="{{ asset('recursos/bootstrap/css/bootstrap.min.css') }}">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
        <!-- Ionicons -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="{{ asset('recursos/dist/css/AdminLTE.min.css') }}">
        <!-- iCheck -->
        <link rel="stylesheet" href="{{ asset('recursos/plugins/iCheck/square/blue.css') }}">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body class="hold-transition register-page">
        <div class="register-box">
            <div class="register-logo">
                <a href="#"><b>Ardid</b>V1</a>
            </div>

            <div class="register-box-body">
                <p class="login-box-msg">Recuperar clave</p>
                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                {{ form_errors(form) }}                
                    <div class="form-group has-feedback">
                        {{ form_widget(form.TxtNumeroIdentificacion, { 'attr': {'class': 'form-control', 'placeholder': 'Numero de identificacion'} }) }}        
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    </div>
                    <div class="row">
                                                <div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label>
                                    
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-xs-4">
                            {{ form_widget(form.BtnRecuperar, { 'attr': {'class': 'btn btn-primary btn-block btn-flat'} }) }}                              
                        </div>
                        <!-- /.col -->
                    </div>
               
                {{ form_end(form) }}
                <br />                
                <a href="{{ path('login') }}">Inicio sesion</a><br>  
            </div>
            <br />          
            {% for flashMessage in app.session.flashbag.get('suceso') %}
                <div id="informacion" class="alert alert-info fade in" >
                     <button type="button" class="close" data-dismiss="alert">&times;</button>
                     <p>{{ flashMessage }}</p>
                 </div>                
            {% endfor %}            
            <!-- /.form-box -->
        </div>
        <!-- /.register-box -->

        <!-- jQuery 2.2.3 -->
        <script src="{{ asset('recursos/plugins/jQuery/jquery-2.2.3.min.js') }}"></script>
        <!-- Bootstrap 3.3.6 -->
        <script src="{{ asset('recursos/bootstrap/js/bootstrap.min.js') }}"></script>
        <!-- iCheck -->
        <script src="{{ asset('recursos/plugins/iCheck/icheck.min.js') }}"></script>
        <script>
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' // optional
                });
            });
        </script>
    </body>
</html>   


