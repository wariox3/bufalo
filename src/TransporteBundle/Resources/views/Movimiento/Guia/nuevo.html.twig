{% extends '::base.html.twig' %}
{% block content %}
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Movimiento: Nuevo -> guia</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> Nuevo: Guia</h4>
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                        <div class="form-group form-group-sm">
                            <label class="col-sm-2 control-label">Destinatario:</label>
                            <div class="col-sm-2">
                                {{ form_widget(form.identificacion, { 'attr': {'class': 'form-control'} }) }}
                            </div>    
                            <div class="col-sm-8">
                                    <div class="row">
                                      <div class="col-lg-12">
                                        <div class="input-group">                                          
                                          {{ form_widget(form.destinatario, { 'attr': {'class': 'form-control'} }) }}
                                          <span class="input-group-btn">
                                              <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('tte_buscar_destinatario') }}', 'buscarDestinatario', 600, 1200)">Buscar</a>
                                          </span>
                                        </div><!-- /input-group -->
                                      </div><!-- /.col-lg-6 -->
                                    </div><!-- /.row -->
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Nombre1:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.nombre1, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">Nombre2:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.nombre2, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Apellido1:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.apellido1, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">Apellido2:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.apellido2, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Direccion:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.direccion, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">Barrio:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.barrio, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Destino:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.ciudadDestinoRel, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label"></label>
                            <div class="col-sm-4">

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Telefono:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.telefono, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">Correo:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.correo, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Documento:</label>
                            <div class="col-sm-3">
                                {{ form_widget(form.documento, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <div class="col-sm-1">
                                Devolver {{ form_widget(form.devolverDocumento) }}
                            </div>                            
                            <label class="col-sm-2 col-sm-2 control-label">Empaque:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.empaqueEmpresaRel, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Cantidad:</label>
                            <div class="col-sm-1">
                                {{ form_widget(form.cantidad, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-1 control-label">Declarado:</label>
                            <div class="col-sm-2">
                                {{ form_widget(form.declarado, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">Peso:</label>
                            <div class="col-sm-1">
                                {{ form_widget(form.peso, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">Volumen:</label>
                            <div class="col-sm-1">
                                {{ form_widget(form.pesoVolumen, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Observacion:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.observacion, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label"></label>
                            <div class="col-sm-4">

                            </div>
                        </div>                            
                        <div class="modal-footer">
                            <a class="btn btn-default btn-sm" href="{{ path('tte_movimiento_guia') }}">Cancelar</a>
                            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div><!-- col-lg-12-->
        </div><!-- /row -->

    </section><! --/wrapper -->
{% endblock %}
