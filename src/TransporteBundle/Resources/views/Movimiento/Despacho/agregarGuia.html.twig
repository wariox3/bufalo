{% extends '::base_sin_menu.html.twig' %}
{% block title %}Despacho agregar guia - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Despacho
            <small>Agregar guia</small>
        </h1>
    </section>    
    <section class="content"> 
  
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                       
        <table  class="table table-striped table-bordered table-condensed table-hover">            
            <tr>
                <th>Id</th>                
                <th>Documento</th>                                
                <th></th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
            </tr>
            {% for arGuias in arGuias %}
                <tr>
                    <td><input type="hidden" name="LblCodigo[]" value="{{ arGuias.codigoGuiaPk }}">{{ arGuias.codigoGuiaPk }} </td>                    
                    <td>{{ arGuias.documento }}</td>                                                                
                    <td style="text-align: center"></td> 
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arGuias.codigoGuiaPk }}" /></td>
                </tr>
            {% endfor %} 
        </table>                                         


        <!-- Botones Menu Items -->
        <div class="btn-toolbar">            
            <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arGuias.getTotalItemCount }}</span></div>                        
            </div>     
            <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arGuias) }}       
            </div>            
        </div> 
        <div class="modal-footer">            
            {{ form_widget(form.BtnAgregar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>            
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
        {{ form_end(form) }}   
        <br/><br/><br/><br/>
    </section>
{% endblock %}
