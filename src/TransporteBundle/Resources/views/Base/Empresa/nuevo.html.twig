{% extends '::base.html.twig' %}
{% block content %}
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Base: Nuevo -> destinatario</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">                    
                    <h4 class="mb"><i class="fa fa-angle-right"></i> Nuevo: Guia</h4>
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }} 
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Identificacion:</label>
                            <div class="col-sm-2">
                                {{ form_widget(form.identificacion, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-1 control-label">DV:</label>
                            <div class="col-sm-1">
                                {{ form_widget(form.digitoVerificacion, { 'attr': {'class': 'form-control'} }) }}
                            </div>                            
                            <label class="col-sm-2 col-sm-2 control-label">Tipo:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.tipoIdentificacionRel, { 'attr': {'class': 'form-control'} }) }}
                            </div>                             
                        </div>                     
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Razon social:</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.nombreCorto, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>                                    
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Nombre1:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.nombre1, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">Nombre2:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.nombre2, { 'attr': {'class': 'form-control'} }) }}
                            </div>                            
                        </div>                            
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Apellido1:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.apellido1, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">Apellido2:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.apellido2, { 'attr': {'class': 'form-control'} }) }}
                            </div>                            
                        </div>                             
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Direccion:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.direccion, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">Barrio:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.barrio, { 'attr': {'class': 'form-control'} }) }}
                            </div>                            
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Destino:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.ciudadRel, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label"></label>
                            <div class="col-sm-4">
                                
                            </div>                            
                        </div>                            
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Telefono:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.telefono, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                            <label class="col-sm-2 col-sm-2 control-label">Correo:</label>
                            <div class="col-sm-4">
                                {{ form_widget(form.correo, { 'attr': {'class': 'form-control'} }) }}
                            </div>                            
                        </div>  
                        <div class="modal-footer">
                            <a class="btn btn-default btn-sm" href="{{ path('tte_base_destinatario') }}">Cancelar</a>        
                            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                        </div>                            
                    {{ form_end(form) }}
                </div>
            </div><!-- col-lg-12-->      	
        </div><!-- /row -->

    </section><! --/wrapper -->
{% endblock %}
