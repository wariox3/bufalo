{% extends '::base.html.twig' %}
{% block content %}
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Base: Nuevo -> empresa</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">                    
                    <h4 class="mb"><i class="fa fa-angle-right"></i> Nuevo: Empresa</h4>
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }} 
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">Nombre:</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
                            </div>                          
                        </div>                     
                         
                        <div class="modal-footer">
                            <a class="btn btn-default btn-sm" href="{{ path('tte_base_empresa') }}">Cancelar</a>        
                            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                        </div>                            
                    {{ form_end(form) }}
                </div>
            </div><!-- col-lg-12-->      	
        </div><!-- /row -->

    </section><! --/wrapper -->
{% endblock %}
